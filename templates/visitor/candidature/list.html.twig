{% extends "visitor/base.html.twig" %}


{% block body %}
<div class="wrapper-page">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
                <h1>CANDIDATURES</h1>
                <p>Vous trouverez ici la liste des candidature.</p>
                <p>//TODO FORM TRI (date/code postal/modéré/non-modéré)</p>
            </div>
            {% for candidature in candidatures %}

                <div class="col-xs-12 col-md-6 col-lg-4 p-b-x4 p-t-x4">
                    <div>
                        <h3>{{ candidature.firstname }}</h3>
                        <h2>{{ candidature.city }}({{ candidature.zipcode }})</h2>
                        <a href="/candidature/candidat.html?id={{ candidature.id }}" class="btn btn-primary btn-block">Voir la fiche</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>
</div>
{% endblock %}